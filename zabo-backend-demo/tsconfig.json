{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}